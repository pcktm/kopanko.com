---
import AGHLogo from "@assets/agh-logo.svg?raw";
import SmarttechLogo from "@assets/smarttech-logo.svg?raw";
import ZwierciadlaLogo from "@assets/zwierciadla-logo.svg?raw";

type Entry = {
  logo: string;
  subentries: {
    date: string;
    title: string;
  }[];
};

const entries: Entry[] = [
  {
    logo: AGHLogo,
    subentries: [
      {
        date: "2020 — 24",
        title:
          "Computer Science and Intelligent Systems B.Eng. Degree from AGH University of Kraków",
      },
      {
        date: "2024 — 26",
        title: "Computer Science and Intelligent Systems M.Eng. Degree",
      },
    ],
  },
  {
    logo: SmarttechLogo,
    subentries: [
      {
        date: "Apr 2023 — Currently",
        title: "Mid Node.js Developer (AWS) working on Threathub.io",
      },
    ],
  },
  {
    logo: ZwierciadlaLogo,
    subentries: [
      {
        date: "2018 — 2019",
        title: "Chief Coordinator of the 16th edition of Zwierciadła Theatre Festival",
      },
    ],
  },
];
---

<div>
  <h1 class="md:mb-3 font-redaction20 text-3xl">Resumé</h1>
  <div
    class="grid grid-cols-1 gap-1 md:grid-cols-5 md:items-center md:gap-x-6 md:gap-y-8"
  >
    {
      entries.map((entry, index) => (
        <>
          <div class="mt-6 w-40 sm:col-span-2 md:col-span-1 md:mt-0 md:w-full dark:fill-stone-200">
            <Fragment set:html={entry.logo} />
          </div>
          <div class="col-span-4 flex flex-col gap-3">
            {entry.subentries.map((subentry, index) => (
              <div>
                <p class="font-mono font-bold dark:text-stone-200">
                  {subentry.date}
                </p>
                <p class="text-balance font-mono">{subentry.title}</p>
              </div>
            ))}
          </div>
        </>
      ))
    }
  </div>
</div>
